
"#view" : {
   layout: 'vertical',
   width: '100%',
   height: '100%',
   backgroundColor: "#FDF9F4"
}

// Text stylying, for example for "Create your account"

"Label": {
	color: "#001133",
	top: '10dp',
	
}

".titleLabel":{
	color: "#001133",
	top: '10dp',
	font: {
		fontSize: 16,
		fontFamily: 'eveleth-thin',
	},
}

