<Alloy>
	<Window id="logWin" exitOnClose="true">
		<View id="logView">
			<ImageView id="logo" class="logo" image="/images/logo.png"/>
			<TextField id="username" hintText="Your name"></TextField>
			<TextField id="password" hintText="Password"></TextField>
			<Button id="login" onClick="login">Login</Button>
			<Button id="btnReg" onClick="register">SignUp</Button>
		</View>
	</Window>
</Alloy>