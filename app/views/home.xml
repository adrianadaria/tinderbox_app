<Alloy>
	<TabGroup>
		<ActionBar id="actionbar" title=" "/>
		<Tab title="News" icon="">
			<Window title="News" layout="vertical" backgroundColor="#FDF9F4">
				<ActionBar id="actionbar" title=" "/>
			<Require src="news"></Require>
			</Window>
		</Tab>
		
		<Tab title="Schedule" icon="">
			<Window title="Schedule" layout="vertical">
				<ActionBar id="actionbar" title=" "/>
				<Require src="schedule"></Require>
			</Window>
		</Tab>
		
		<Tab title="Profile" icon="">
			<Window title="Profile" layout="vertical">
				<ScrollableView height="90%" id="messageMenu2" showPagingControl="true">
					<View backgroundColor="#FDF9F4">
						<Require src="ticket"></Require>
					</View>
					<View backgroundColor="#FDF9F4">
						<Require src="group"></Require>
					</View>
					<View backgroundColor="#FDF9F4">
						<Require src="update"></Require>
					</View>
					<View backgroundColor="#FDF9F4">
						<Require src="faq"></Require>
					</View>
				</ScrollableView>
				<View height="10%" layout="horizontal">
					<View class="menuItem1" id="p2View1" width="24.9%" height="Titanium.UI.FILL">
						<Label>Ticket</Label>
					</View>
					<View class="menuItem1" id="p2View2" width="24.9%" height="Titanium.UI.FILL">
						<Label>Group</Label>
					</View>
					<View class="menuItem1" id="p2View3" width="24.9%" height="Titanium.UI.FILL">
						<Label>Update</Label>
					</View>
					<View class="menuItem1" id="p2View4" width="24.9%" height="Titanium.UI.FILL">
						<Label>FAQ</Label>
					</View>
				</View>
			</Window>
		</Tab>
		<Tab title="Messages" icon="">
			<Window title="Messages" layout="vertical">
				<ScrollableView height="90%" id="messagesMenu" showPagingControl="true" currentPage="1">
					<View backgroundColor="#FDF9F4">
						<Require src="sent"></Require>
					</View>
					<View backgroundColor="#FDF9F4">
						<Require src="inbox"></Require>
					</View>
					<View backgroundColor="#FDF9F4">
						<Require src="createMessage"></Require>
					</View>
					
				</ScrollableView>
				<View id="pagging" height="10%" width="Ti.UI.SIZE" layout="horizontal">
					<View class="menuItem1" id="pView1" width="33.3%" height="Titanium.UI.FILL">
						<Label>Sent</Label>
					</View>
					<View class="menuItem1" id="pView2" width="33.3%" height="Titanium.UI.FILL">
						<Label>Inbox</Label>
					</View>
					<View class="menuItem1" id="pView3" width="33.3%" height="Titanium.UI.FILL">
						<Label>Create</Label>
					</View>
				</View>
			</Window>
		</Tab>
	</TabGroup>
</Alloy>
