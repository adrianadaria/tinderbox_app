<Alloy>
	<TabGroup>
		<Tab title="News" icon="">
			<Window title="News" layout="vertical" backgroundColor="#FDF9F4">
			<Require src="news"></Require>
			</Window>
		</Tab>
		
		<Tab title="Schedule" icon="">
			<Window title="Schedule" layout="vertical">
				<Require src="schedule"></Require>
			</Window>
		</Tab>
		
		<Tab title="Profile" icon="">
			<Window title="Profile" layout="vertical">
				<ScrollableView height="90%">
					<View backgroundColor="red">
						<Label>Ticket</Label>
					</View>
					<View backgroundColor="blue">
						<Label>Group</Label>
					</View>
					<View backgroundColor="yellow">
						<Require src="update"></Require>
					</View>
					<View backgroundColor="green">
						<Label>FAQ</Label>
					</View>
				</ScrollableView>
				<View height="10%" layout="horizontal">
					<View width="24.9%" height="Titanium.UI.FILL">
						<Label>Ticket</Label>
					</View>
					<View width="24.9%" height="Titanium.UI.FILL">
						<Label>Group</Label>
					</View>
					<View width="24.9%" height="Titanium.UI.FILL">
						<Label>Update</Label>
					</View>
					<View width="24.9%" height="Titanium.UI.FILL">
						<Label>FAQ</Label>
					</View>
				</View>
			</Window>
		</Tab>
		<Tab title="Messages" icon="">
			<Window title="Messages" layout="vertical">
				<ScrollableView height="90%">
					<View backgroundColor="red">
						<Label>Sent</Label>
					</View>
					<View backgroundColor="blue">
						<Label>Inbox</Label>
					</View>
					<View backgroundColor="yellow">
						<Label>Create</Label>
					</View>
					
				</ScrollableView>
				<View id="pagging" height="10%" width="Ti.UI.SIZE" layout="horizontal">
					<View width="33.3%" height="Titanium.UI.FILL">
						<Label>Sent</Label>
					</View>
					<View width="33.3%" height="Titanium.UI.FILL">
						<Label>Inbox</Label>
					</View>
					<View width="33.3%" height="Titanium.UI.FILL">
						<Label>Create</Label>
					</View>
					
				</View>
			</Window>
		</Tab>
	</TabGroup>
</Alloy>